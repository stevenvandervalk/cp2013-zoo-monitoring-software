<h1>Listing cages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Size</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cages.each do |cage| %>
  <tr>
    <td><%= cage.name %></td>
    <td><%= cage.size %></td>
    <td><%= cage.category %></td>
    <td><%= link_to 'Show', cage_path(cage) %></td>
    <td><%= link_to 'Edit', edit_cage_path(cage, cage) %></td>
    <td><%= link_to 'Destroy', cage_path(cage), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

